<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Productos</title>
</head>

<body>

    <div class="container">

        <div class="container my-3">
            <h1>Productos</h1>
        </div>

        <div class="container mb-3">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Imagen</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(product=> { %>
                        <tr>
                            <th scope="row">
                                <%= product.id %>
                            </th>
                            <td>
                                <%= product.productName %>
                            </td>
                            <td>
                                $<%= product.price %>
                            </td>
                            <td>
                                <a target="_blank" href= <%= product.thumbnail %> > Ver imagen </a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
        <button class="btn btn-primary mb-3"><a style="color: white; text-decoration: none" href="http://localhost:8080/api/products/addProduct/form">Cargar producto</a></button>

    </div>
</body>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>

</html>